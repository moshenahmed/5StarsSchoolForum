@using Microsoft.AspNet.Identity
@model IEnumerable<_5StarsSchoolForum.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
ViewBag.Title = "Home Page";
}


@if (Request.IsAuthenticated)
{
	if (User.IsInRole("Teacher"))
	{
		<div class="row">
			<div class="col-md-4">
			    <h2>
			        @Html.ActionLink("Students", "Studentlist", "Categories")
			    </h2>
                <br/>
				<p>
					You can see all users here.
				</p>
				<p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
			</div>

			<div class="col-md-12">
				<h2>
					@Html.ActionLink("Users", "Teacherlist", "Categories")

				</h2>
				<p>As teacher, You can create, delete, modify a category. Add a new user to a category and delete as well. A teacher has superpowers to delete a message with any reply in a specific category.</p>
			</div>
		</div>
	}

	else if (User.IsInRole("Student"))
	{
	    <div class="col-md-4">
	        <h2>
	            You are a Student!
	        </h2>
	        <p>
	            As a student you have access to various categories assigned to you by your class teacher(s).
	        </p>
	        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>
	    </div>
	    <div class="col-md-10">
	        <h2>Categories</h2>
	        <p>Categories are groups you have access to, click <href>below</href> to see list of them.</p>
	        @Html.ActionLink("My Categories", "AssignedCategories", "Home", new { id = User.Identity.GetUserId() }, null)
	    </div>
	    
	}


}

else
{
    <div class="jumbotron">
        @*<h1>Student List</h1>*@
        @*@{Html.RenderAction("Studentlist","Categories");}*@
        <p class="lead">Welcome to the school forum, Please login to start!</p>
    </div>
    <div><img  width="1140" height="148" src="Images/forumtwo.png", alt="Sample Photo"/></div>
}
<div class="bottom-left">
    <span>Developers version of the application</span>
</div>