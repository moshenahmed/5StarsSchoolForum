@model _5StarsSchoolForum.Models.Message

@{
	ViewBag.Title = "Delete";
}



<h3>Are you sure you want to delete this message and all its replies ?</h3>
<div>

	<hr />





	<h4>
		@Html.DisplayFor(model => model.PostMessage)
	</h4>

	<div>

		@Html.DisplayFor(model => model.User)<br />

		@Html.DisplayFor(model => model.PostingDate)

	</div>


	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color ">
			<input type="submit" value="Delete" class="btn btn-default" />

		</div>
	}

</div>
<br />
<div class="col-md-2">
	@Html.ActionLink("Back", "Index", "Replies", new { id = Url.RequestContext.RouteData.Values["id"]}, null)
</div>