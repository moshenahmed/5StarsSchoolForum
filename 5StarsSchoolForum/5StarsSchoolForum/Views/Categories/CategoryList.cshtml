@model IEnumerable<_5StarsSchoolForum.Models.Category>

@{
	ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
		@Html.ActionLink("Create New", "Create")
	</p>
<table class="table">
	<tr>
		@*<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>*@
		<th>
			@Html.DisplayNameFor(model => model.CategoryTitle)
		</th>
		
	</tr>

	@foreach (var item in Model)
	{

		<tr>
			<td>
				@*@Html.CheckBoxFor(modelItem => item.Assigned, new { onclick = "return true" })*@
				@Html.ActionLink(item.CategoryTitle, "Details", new { id = item.Id }, null)
			</td>
			<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>

		</tr>
	}

</table>

